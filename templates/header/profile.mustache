<style>
    .header-profile-card {
        background-color: white;
        padding: 15px;
        -webkit-box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.4);
        -moz-box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.4);
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.4);
    }

    .header-profile-card .information {
        width: 100%;
        font-size: 0;
        padding-bottom:10px;
    }

    .header-profile-card .information .profile {
        padding: 5px 15px 5px 5px;
        display: inline-block;
        vertical-align:top;
    }
    .header-profile-card .information .account {
        font-size:1rem;
        display:inline-block;
        vertical-align:top;
        width:calc(100% - 60px);
        height:100%;
    }
    .header-profile-card .information .account .name {
        padding-top:5px;
        font-size:0.95em;
        font-weight:bold;
    }
    .header-profile-card .information .account .email {
        font-size:0.9em;
        color:#7f7f7f;
    }
    .header-profile-card .information .account .btn-group .btn-view-account {
        width:100%;
        background-color:#f4f4f4;
        border:0;
        color:#aeaeae;
        font-weight:bold;
        margin-top:5px;
        padding:8px 0;
    }

    .header-profile-card .information .profile img {
        width: 40px;
        height: 40px;
    }

    .header-profile-card .function {
        border-top: 1px solid #c8c8c8;
    }
    .header-profile-card .function button {
        width:100%;
        padding:10px 5px 0 5px;
        font-size:1.1em;
        color:#aeaeae;
        background-color:transparent;
        border:0;
    }
</style>
<div class="header-profile-card">
    <div class="information">
        <div class="profile">
            <img data-default='./static/images/account_icon.svg' src="{{ src }}">
        </div>
        <div class="account">
            <div class="name">{{ name }}</div>
            <div class="email">{{ email }}</div>
            <div class="btn-group">
                <button class="btn-view-account">View Account</button>
            </div>
        </div>
    </div>
    <div class="function">
        <button class="sign js_sign">Sign {{ isLogin ? "Out" : "In" }}</button>
    </div>
</div>
